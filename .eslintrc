{
  "env": {
    "mocha": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:ava/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "root": true,
  "plugins": [
    "babel",
    "promise",
    "ava"
  ],
  "rules": {
    "arrow-parens": [2, "as-needed", {
      "requireForBlockBody": false
    }]
  }
}
